extends layout

block main
    h2 Gestión de Clientes

    .mb-4
        form#formCliente.row.g-3.needs-validation(novalidate)
            .col-md-4
                label.form-label(for="dni") DNI (8 números)
                input#dni.form-control(type="text" pattern="^[0-9]{8}$" required)
                .invalid-feedback#dni-error El DNI debe ser único y tener 8 dígitos.
            .col-md-4
                label.form-label(for="nombre") Nombre
                input#nombre.form-control(type="text" minlength="3" required)
                .invalid-feedback Mínimo 3 caracteres.
            .col-md-4
                label.form-label(for="direccion") Dirección
                input#direccion.form-control(type="text" required)
                .invalid-feedback La dirección es obligatoria.
            .col-12
                button.btn.btn-primary(type="submit") Registrar
                button.btn.btn-link.text-secondary(type="reset") Limpiar

    hr

    .row
        .col-lg-7
            h3.h6 Listado de Clientes
            .table-responsive
                table#tablaClientes.table.table-sm.table-hover
                    thead.table-light
                        tr
                            th DNI
                            th Nombre
                            th Dirección
                            th Pedidos
                            th Acciones
                    tbody
            
            .d-flex.justify-content-end.mt-3.mb-3
                a.btn.btn-outline-primary.btn-sm(href="#formCliente") 
                    i.bi.bi-arrow-up-circle 
                    |  Subir al formulario

        .col-lg-5
            #panelPedidos.d-none
                .card.shadow-sm.border-info.sticky-top(style="top: 20px; z-index: 100;")
                    .card-header.bg-info.text-white.d-flex.justify-content-between.align-items-center
                        span#nombreClientePedido.fw-bold Cliente
                        button.btn-close(type="button" onclick="document.getElementById('panelPedidos').classList.add('d-none')" aria-label="Cerrar")
                    .card-body(style="max-height: 80vh; overflow-y: auto;")
                        #contenedorCards.row.g-3